const { expect: playwrightExpect } = require('@playwright/test');

// Wrapper para o expect, que aceita apenas Locators
function expectWrapper(locator) {
    // Verifica se o locator é um objeto válido e se é um Locator
    if (typeof locator !== 'object' || typeof locator.isVisible !== 'function') {
        throw new Error('O expect deve ser usado com um objeto Locator do Playwright.');
    }

    // Retorna o expect original do Playwright para o Locator
    return playwrightExpect(locator);
}

module.exports = { expect: expectWrapper };
