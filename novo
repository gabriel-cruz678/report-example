const { expect: playwrightExpect } = require('@playwright/test');

// Função simples que valida se o expect está sendo usado com um Locator válido
function expectWrapper(locator) {
    // Verifica se o argumento é um Locator do Playwright (checa o método `isVisible`)
    if (!locator || typeof locator.isVisible !== 'function') {
        throw new Error('O expect deve ser usado com um objeto Locator do Playwright.');
    }

    // Retorna o expect original do Playwright, aplicado ao Locator
    return playwrightExpect(locator);
}

module.exports = { expect: expectWrapper };
